<local:BaseDialogUserControl x:Class="EscuelaWPF.AddTeacherBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             x:Name="dialogWindow"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EscuelaWPF"
             mc:Ignorable="d"  
             >
    <StackPanel Background="{StaticResource ForegroundVeryLightBrush}">
        <TextBlock Text="{Binding NameHint, FallbackValue=Label}" Margin="10 20 10 0"
                       VerticalAlignment="Center" FontSize="20"
                       FontFamily="Lato"/>

        <TextBox Text="{Binding EditName}"
                     Grid.Column="1" Background="Transparent"
                     FontFamily="Lato"
                     Padding="2" FontSize="18"
                     Margin="11 11 15 8"/>
        <TextBlock Text="{Binding IdHint, FallbackValue=Label}" Margin="10 20 10 0"
                       VerticalAlignment="Center" FontSize="20"
                       FontFamily="Lato"/>

        <TextBox Text="{Binding EditId}"
                     Grid.Column="1" Background="Transparent"
                     FontFamily="Lato"
                     Padding="2" FontSize="18"
                     Margin="11 11 15 8"/>
        <TextBlock Text="{Binding LastNameHint, FallbackValue=Label}" Margin="10 20 10 0"
                       VerticalAlignment="Center" FontSize="20"
                       FontFamily="Lato"/>

        <TextBox Text="{Binding EditLastName}"
                     Grid.Column="1" Background="Transparent"
                     FontFamily="Lato"
                     Padding="2" FontSize="18"
                     Margin="11 11 15 8"/>
        <TextBlock Text="{Binding PhoneNumberHint, FallbackValue=Label}" Margin="10 20 10 0"
                       VerticalAlignment="Center" FontSize="20"
                       FontFamily="Lato"/>

        <TextBox Text="{Binding EditPhoneNumber}"
                     Grid.Column="1" Background="Transparent"
                     FontFamily="Lato"
                     Padding="2" FontSize="18"
                     Margin="11 11 15 8"/>
        <Button Content="Save"
                Margin="5" FontSize="18"
                Command="{Binding SaveCommand, Mode=OneWay}"
                CommandParameter="{Binding ElementName=dialogWindow}"
                />
    </StackPanel>
</local:BaseDialogUserControl>
