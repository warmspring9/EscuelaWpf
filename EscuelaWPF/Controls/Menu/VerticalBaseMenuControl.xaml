<UserControl x:Class="EscuelaWPF.VerticalBaseMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EscuelaWPF"
             xmlns:core="clr-namespace:EscuelaWPF.Core;assembly=EscuelaWPF.Core"
             mc:Ignorable="d" >
    <ItemsControl d:DataContext="{x:Static core:MenuElementListDesignModel.Instance}"
                  ItemsSource="{Binding Items}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Border Background="{StaticResource ForegroundVeryLightBrush}"
                            CornerRadius="4">
                        <TextBlock Text="{Binding Text}" Foreground="{StaticResource DarkBlueBrush}"
                                   Name="Text" Margin="5 0 5 0" Padding="5"
                                   FontSize="20" FontFamily="Lato"/>
                    </Border>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
