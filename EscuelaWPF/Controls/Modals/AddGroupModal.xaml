<UserControl x:Class="EscuelaWPF.AddGroupModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EscuelaWPF"
             xmlns:local1="clr-namespace:EscuelaWPF.Core;assembly=EscuelaWPF.Core"
             mc:Ignorable="d"
             d:DataContext="{x:Static local1:AddGroupModalDesignViewModel.Instance}"
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Border Background="{StaticResource BackgroundLightBrush}" Margin="10 0 0 0" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="{StaticResource BackgroundMain}"/>
            </Border.Effect>
            <ContentControl Content="{Binding Converter={local:PopupContentConverter}}"/>
        </Border>        
    </Grid>
</UserControl>
